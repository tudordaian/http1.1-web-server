{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",

    // Adaugate
    "noEmitOnError": true,   // previne scrierea in dist daca sunt erori
    "sourceMap": true,
  },
  "include": ["src"]
}
